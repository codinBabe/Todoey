<%- include('partials/header.ejs') %>

    <main class="container">
        <h2>
            <%= locals.Title %>
        </h2>
        <% if (locals.task) { %>
            <% task.forEach(todo=> {%>
                <form action="/delete" method="post">
                    <div class="item">
                        <input readonly type="text" name="<%= todo.name %>" placeholder="<%= todo.name %>">
                        <input type="checkbox" name="checkbox" value="<%=todo._id %>" onchange="this.form.submit()">
                        <input type="hidden" name="randomRouteTodo" value="<%= Title %>">
                    </div>
                </form>
                <%}); %>
                    <% } %>
                        <form action="/" method="POST" class="box">
                            <div class="item">
                                <input type="text" name="newtask" placeholder="Enter new item">
                            </div>
                            <div class="btn-box">
                                <button type="submit" name="randomRoute" value="<%= Title %>" class="btn">+</button>
                            </div>
                        </form>
    </main>
    <%- include('partials/footer.ejs') %>